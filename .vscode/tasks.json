{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Android Emulator",
      "type": "shell",
      "command": "~/Library/Android/sdk/emulator/emulator",
      "args": [
        "-avd",
        "${input:avdName}",
        "&"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Build Debug APK",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "assembleDebug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Install APK on Emulator",
      "type": "shell",
      "command": "~/Library/Android/sdk/platform-tools/adb",
      "args": [
        "install",
        "-r",
        "app/build/outputs/apk/debug/app-debug.apk"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build and Install",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build Debug APK",
        "Install APK on Emulator"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Launch App on Emulator",
      "type": "shell",
      "command": "~/Library/Android/sdk/platform-tools/adb",
      "args": [
        "shell",
        "am",
        "start",
        "-n",
        "com.cs407.cadence/.MainActivity"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Build, Install and Launch",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build Debug APK",
        "Install APK on Emulator",
        "Launch App on Emulator"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "View Logcat",
      "type": "shell",
      "command": "~/Library/Android/sdk/platform-tools/adb",
      "args": [
        "logcat",
        "-v",
        "color"
      ],
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Clear App Data",
      "type": "shell",
      "command": "~/Library/Android/sdk/platform-tools/adb",
      "args": [
        "shell",
        "pm",
        "clear",
        "com.cs407.cadence"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "avdName",
      "type": "promptString",
      "description": "Enter the name of your AVD",
      "default": "Pixel_6"
    }
  ]
}
